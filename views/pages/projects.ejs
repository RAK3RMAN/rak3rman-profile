<script>
    $.ajax({
        type: "GET",
        url: "https://api.github.com/users/RAK3RMAN/repos",
        success: function (data) {
            data.sort(function (a, b) {
                return new Date(b.pushed_at) - new Date(a.pushed_at);
            });
            for (let i in data) {
                console.log(data[i]["name"]);
                $('#githubprojects').append(
                    '<div class="col-12 border-top border-bottom py-5" data-aos="fade" data-aos-delay="200">\n' +
                    '    <div class="row align-items-stretch">\n' +
                    '        <div class="col-md-3 text-white mb-3 mb-md-0"><a href=' + data[i]["html_url"] + '><span class="h4">' + data[i]["name"] + '</span></a></div>\n' +
                    '        <div class="col-md-9">\n' +
                    '            <h5 class="text-white">' + data[i]["description"] + '</h5>\n' +
                    '            <span><img class="pr-2" src="https://img.shields.io/badge/language-' + data[i]["language"] + '-informational.svg?style=flat" alt="stat1"><img src="https://travis-ci.org/RAK3RMAN/' + data[i]["name"] + '.svg?branch=master" alt="stat2"> | Last updated ' + moment(data[i]["pushed_at"]).fromNow() + '</span>\n' +
                    '        </div>\n' +
                    '    </div>\n' +
                    '</div>'
                );
            }
        },
        error: function (data) {
            console.log(data);
        }
    });
</script>
