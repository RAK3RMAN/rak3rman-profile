<script>
    window.onload = typeWriter;
    let i = 0;
    let set = 0;
    let status = 0;
    let words = ['remarkable', 'awe-inspiring', 'breathtaking', 'brilliant', 'full of errors', 'powerful', 'simply amazing'];
    function typeWriter() {
        if (i < words[set].length && status === 0) {
            document.getElementById("type").innerHTML += words[set].charAt(i);
            i++;
            if (i === words[set].length) {
                status = 1;
                setTimeout(typeWriter, 6000);
            } else {
                setTimeout(typeWriter, 200);
            }
        } else if (i === 0) {
            if (set === (words.length-1)) {
                set = 0;
            } else {
                set++;
            }
            status = 0;
            typeWriter();
        } else if (i <= words[set].length && status === 1) {
            document.getElementById("type").innerHTML = words[set].slice(0,i - 1);
            if (i === 1) {
                i--;
                typeWriter();
            } else {
                i--;
                setTimeout(typeWriter, 120);
            }
        }
    }
</script>
